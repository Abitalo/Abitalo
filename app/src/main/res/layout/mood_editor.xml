<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#595959"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/mood_editor_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:text="So,今天的心情是……"/>

    <EditText
        android:id="@+id/mood_edit_text"
        android:layout_below="@id/mood_editor_title"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000"
        android:textColorHint="#595959"
        android:hint="Fuck the world?"
        android:background="#fff"
        />
    <ImageButton
        android:id="@+id/mood_submit_btn"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mood_edit_text"
        android:layout_alignRight="@id/mood_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_mood"/>

</RelativeLayout>