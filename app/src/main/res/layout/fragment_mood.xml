<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_mood"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_x="68dp"
            android:background="#99595959"

            />
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_x="68dp"
            android:background="#99f57b7b"

            />
    </AbsoluteLayout>
    <ListView
            android:id="@+id/mood_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="10dp"
            android:divider="@null"
            android:listSelector="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
    </ListView>

    <!--<ImageButton-->
        <!--android:id="@+id/mood_menu"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/mood_btn"-->
        <!--android:background="#00000000" />-->

    <com.tekinarslan.material.FloatingActionButton
        android:id="@+id/mood_add_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp" />
</RelativeLayout>